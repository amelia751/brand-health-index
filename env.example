# Brand Health Index - Environment Variables
# Copy this file to .env and fill in your actual values

# Google Cloud Configuration
PROJECT_ID=your-gcp-project-id
GCS_BUCKET=brand-health-raw-data-dev-20241201

# Twitter API
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Reddit API (PRAW)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=BrandHealthIndex/1.0

# Google Trends (no API key needed)
# Pytrends uses Google's public API

# CFPB API (no API key needed)
# CFPB has a public API

# Glassdoor API (RapidAPI)
RAPIDAPI_KEY=your_rapidapi_key_here
RAPIDAPI_HOST=real-time-glassdoor-data.p.rapidapi.com

# Secret Manager Secret Names
TWITTER_SECRET_NAME=twitter-bearer-token
REDDIT_SECRET_NAME=reddit-credentials
GLASSDOOR_SECRET_NAME=glassdoor-rapidapi-key
